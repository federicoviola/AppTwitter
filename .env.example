# Configuración de la aplicación
APP_ENV=development
LOG_LEVEL=INFO

# Credenciales de X (Twitter) API
# Obtener en: https://developer.twitter.com/en/portal/dashboard
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=
X_BEARER_TOKEN=

# Credenciales de LinkedIn API
# Obtener en: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# LLM (opcional)
# Gemini (Google) - Recomendado
GEMINI_API_KEY=

# OpenAI
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# Configuración de publicación
# Habilitar publicación automática (true/false)
AUTO_POST_ENABLED=true

# Notificaciones
NOTIFICATIONS_ENABLED=true
DESKTOP_NOTIFICATIONS_ENABLED=true
NTFY_TOPIC=apptwitter_fede  # Cambia esto por un nombre único

# Máximo de tweets por día (default: 2 para mañana y noche)
MAX_TWEETS_PER_DAY=2

# Slots fijos de publicación (formato HH:MM, hora argentina)
# Slot de mañana
POST_SLOT_MORNING=09:00
# Slot de noche
POST_SLOT_EVENING=21:00

# Configuración de LinkedIn (posts profesionales)
LINKEDIN_START_HOUR=10
LINKEDIN_INTERVAL_HOURS=6
LINKEDIN_POSTS_PER_DAY=2

# Adjuntar imagen automáticamente a tweets con links (true/false)
# Extrae la imagen Open Graph del artículo y la adjunta al tweet
AUTO_ATTACH_IMAGE=true

# Idioma por defecto
DEFAULT_LANGUAGE=es
